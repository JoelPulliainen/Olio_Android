<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:fillViewport="true">

    <ScrollView
        android:layout_height="400dp"
        android:layout_width="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp" >

            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exact fuel consumption or estimate based on usage and power" />

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Fuel consumption of the boat,\nin l/year"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextNumber2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Hours of boat use in a year"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextNumber3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="The power of the boat's engine,\nin HP"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Boat type" />

            <Spinner
                android:id="@+id/boattypespinner"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbars="vertical"
                android:spinnerMode="dropdown" />

            <EditText
                android:id="@+id/editTextNumber4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Number of active boat users"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextNumber5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Motorcycle fuel consumption,\nin l/100km"
                android:inputType="number" />


            <EditText
                android:id="@+id/editTextNumber6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Distance driven in a motorcycle,\nin km/year"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextNumber7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Distance travelled in\nclose-distance buses,\nin km/week"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextNumber8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Distance travelled in\nclose-distance trains,\nin km/week"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextNumber9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Distance travelled in\nlong-distance buses,\nin km/year"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextNumber10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Distance travelled in\nlong-distance trains,\nin km/year"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextNumber11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Distance travelled\nin metros/subways,\nin km/week"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextNumber12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Distance travelled in trams,\nin km/week"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextNumber13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Total number of one way\nflights in a year from Finland\nto the Canary Islands or\ncomparable"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextNumber14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Total number of one way\ninter-European flights\nor comparable"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextNumber15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Total number of one way flights\nin a year within Finland\nor comparable"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextNumber16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Total number of one way flights\nin a year from Finland\nto other continents"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextNumber17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Total number of one way\ncruises in a year from Finland\nto Germany or comparable"
                android:inputType="number" />


            <EditText
                android:id="@+id/editTextNumber18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Total number of one way\ncruises in a year from Finland\nto Estonia"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextNumber19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Total number of one way\ncruises in a year from Finland\nto Sweden"
                android:inputType="number" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>